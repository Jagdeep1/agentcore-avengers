---
/**
 * Header - Site navigation header
 */

interface Props {
  variant?: 'default' | 'transparent';
}

const { variant = 'default' } = Astro.props;
const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;

const navItems = [
  { label: 'Course', href: `${base}days` },
  { label: 'Troubleshooting', href: `${base}troubleshooting` },
  { label: 'Reference', href: `${base}reference` },
];
---

<header
  class:list={[
    'header',
    { 'header--transparent': variant === 'transparent' },
  ]}
>
  <div class="header__container">
    <!-- Logo -->
    <a href={base} class="header__logo" aria-label="Home">
      <svg
        class="header__logo-icon"
        viewBox="0 0 32 32"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <circle cx="16" cy="16" r="14" stroke="currentColor" stroke-width="2" />
        <path
          d="M16 6 L22 12 L16 18 L10 12 Z"
          fill="currentColor"
          opacity="0.5"
        />
        <circle cx="16" cy="16" r="4" fill="currentColor" />
      </svg>
      <span class="header__logo-text">AgentCore Initiative</span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="header__nav hide-mobile" aria-label="Main navigation">
      <ul class="header__nav-list">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={[
                  'header__nav-link',
                  { 'header__nav-link--active': currentPath.startsWith(item.href) },
                ]}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <!-- Actions -->
    <div class="header__actions">
      <!-- Theme Toggle Button (placeholder - will be React component) -->
      <button
        id="theme-toggle"
        class="header__theme-toggle"
        aria-label="Toggle theme"
        type="button"
      >
        <svg
          class="header__theme-icon header__theme-icon--dark"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <circle cx="12" cy="12" r="5" />
          <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
        </svg>
        <svg
          class="header__theme-icon header__theme-icon--light"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
        </svg>
      </button>

      <!-- Mobile Menu Toggle -->
      <button
        id="mobile-menu-toggle"
        class="header__mobile-toggle hide-desktop"
        aria-label="Toggle menu"
        aria-expanded="false"
        type="button"
      >
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path class="menu-icon" d="M4 6h16M4 12h16M4 18h16" />
          <path class="close-icon" d="M6 6l12 12M6 18L18 6" style="display: none" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <nav
    id="mobile-nav"
    class="header__mobile-nav hide-desktop"
    aria-label="Mobile navigation"
    hidden
  >
    <ul class="header__mobile-nav-list">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                'header__mobile-nav-link',
                { 'header__mobile-nav-link--active': currentPath.startsWith(item.href) },
              ]}
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    background-color: var(--color-bg-primary);
    border-bottom: var(--border-subtle);
    backdrop-filter: blur(10px);
  }

  .header--transparent {
    background-color: transparent;
    border-bottom: none;
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 80rem;
    margin: 0 auto;
    padding: 1rem var(--space-content);
  }

  .header__logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-primary);
    font-weight: 600;
    font-size: 1.125rem;
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  .header__logo:hover {
    opacity: 0.8;
  }

  .header__logo-icon {
    width: 2rem;
    height: 2rem;
    color: var(--color-accent-primary);
  }

  .header__logo-text {
    font-family: var(--font-display);
  }

  .header__nav-list {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .header__nav-link {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .header__nav-link:hover,
  .header__nav-link--active {
    color: var(--color-text-primary);
  }

  .header__nav-link--active {
    position: relative;
  }

  .header__nav-link--active::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    right: 0;
    height: 2px;
    background-color: var(--color-accent-primary);
    border-radius: 1px;
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header__theme-toggle,
  .header__mobile-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    padding: 0;
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    cursor: pointer;
    transition:
      background-color var(--transition-fast),
      color var(--transition-fast);
  }

  .header__theme-toggle:hover,
  .header__mobile-toggle:hover {
    background-color: var(--color-bg-elevated);
    color: var(--color-text-primary);
  }

  .header__theme-toggle svg,
  .header__mobile-toggle svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Theme icon visibility */
  [data-theme='dark'] .header__theme-icon--dark {
    display: block;
  }

  [data-theme='dark'] .header__theme-icon--light {
    display: none;
  }

  [data-theme='light'] .header__theme-icon--dark {
    display: none;
  }

  [data-theme='light'] .header__theme-icon--light {
    display: block;
  }

  /* Mobile Navigation */
  .header__mobile-nav {
    padding: 1rem var(--space-content);
    background-color: var(--color-bg-secondary);
    border-top: var(--border-subtle);
  }

  .header__mobile-nav[hidden] {
    display: none;
  }

  .header__mobile-nav-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .header__mobile-nav-link {
    display: block;
    padding: 0.75rem 1rem;
    color: var(--color-text-secondary);
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius-md);
    transition:
      background-color var(--transition-fast),
      color var(--transition-fast);
  }

  .header__mobile-nav-link:hover,
  .header__mobile-nav-link--active {
    background-color: var(--color-bg-elevated);
    color: var(--color-text-primary);
  }
</style>

<script>
  // Theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  if (themeToggle) {
    themeToggle.addEventListener('click', () => {
      const html = document.documentElement;
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

      html.setAttribute('data-theme', newTheme);

      // Save to localStorage
      const stored = localStorage.getItem('agentcore-initiative-progress');
      let progress = { theme: newTheme };
      if (stored) {
        try {
          progress = { ...JSON.parse(stored), theme: newTheme };
        } catch (e) {}
      }
      localStorage.setItem('agentcore-initiative-progress', JSON.stringify(progress));
    });
  }

  // Mobile menu toggle
  const mobileToggle = document.getElementById('mobile-menu-toggle');
  const mobileNav = document.getElementById('mobile-nav');
  if (mobileToggle && mobileNav) {
    mobileToggle.addEventListener('click', () => {
      const isExpanded = mobileToggle.getAttribute('aria-expanded') === 'true';
      mobileToggle.setAttribute('aria-expanded', String(!isExpanded));
      mobileNav.hidden = isExpanded;

      // Toggle icon
      const menuIcon = mobileToggle.querySelector('.menu-icon') as SVGPathElement;
      const closeIcon = mobileToggle.querySelector('.close-icon') as SVGPathElement;
      if (menuIcon && closeIcon) {
        menuIcon.style.display = isExpanded ? 'block' : 'none';
        closeIcon.style.display = isExpanded ? 'none' : 'block';
      }
    });
  }
</script>
