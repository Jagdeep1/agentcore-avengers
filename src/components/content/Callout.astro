---
/**
 * Callout - Info, warning, danger, and success callout boxes
 */

interface Props {
  type?: 'info' | 'warning' | 'danger' | 'success' | 'tip';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const icons: Record<string, string> = {
  info: `<circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/>`,
  warning: `<path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><path d="M12 9v4"/><path d="M12 17h.01"/>`,
  danger: `<circle cx="12" cy="12" r="10"/><path d="m15 9-6 6"/><path d="m9 9 6 6"/>`,
  success: `<circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/>`,
  tip: `<path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"/><path d="M9 18h6"/><path d="M10 22h4"/>`,
};

const defaultTitles: Record<string, string> = {
  info: 'Info',
  warning: 'Warning',
  danger: 'Danger',
  success: 'Success',
  tip: 'Tip',
};
---

<aside class:list={['callout', `callout--${type}`]} role="note">
  <div class="callout__icon">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <Fragment set:html={icons[type]} />
    </svg>
  </div>
  <div class="callout__content">
    {(title || defaultTitles[type]) && (
      <p class="callout__title">{title || defaultTitles[type]}</p>
    )}
    <div class="callout__body">
      <slot />
    </div>
  </div>
</aside>

<style>
  .callout {
    display: flex;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border-radius: var(--radius-lg);
    margin: 1.5rem 0;
    border-left: 4px solid;
  }

  .callout--info {
    background: rgba(59, 130, 246, 0.08);
    border-left-color: var(--color-accent-primary);
  }

  .callout--info .callout__icon {
    color: var(--color-accent-primary);
  }

  .callout--warning {
    background: rgba(245, 158, 11, 0.08);
    border-left-color: var(--color-accent-warning);
  }

  .callout--warning .callout__icon {
    color: var(--color-accent-warning);
  }

  .callout--danger {
    background: rgba(239, 68, 68, 0.08);
    border-left-color: var(--color-accent-danger);
  }

  .callout--danger .callout__icon {
    color: var(--color-accent-danger);
  }

  .callout--success {
    background: rgba(16, 185, 129, 0.08);
    border-left-color: var(--color-accent-success);
  }

  .callout--success .callout__icon {
    color: var(--color-accent-success);
  }

  .callout--tip {
    background: rgba(139, 92, 246, 0.08);
    border-left-color: var(--color-accent-purple);
  }

  .callout--tip .callout__icon {
    color: var(--color-accent-purple);
  }

  .callout__icon {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
    margin-top: 0.125rem;
  }

  .callout__content {
    flex: 1;
    min-width: 0;
  }

  .callout__title {
    font-weight: 600;
    font-size: 0.9375rem;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
  }

  .callout__body {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .callout__body :global(p) {
    margin: 0;
  }

  .callout__body :global(p + p) {
    margin-top: 0.5rem;
  }

  .callout__body :global(code) {
    font-size: 0.85em;
  }

  .callout__body :global(a) {
    font-weight: 500;
  }
</style>
